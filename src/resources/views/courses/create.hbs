<div class="mt-4">
  <h3>Đăng khóa học</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên</label>
      <input class="form-control" placeholder="Nhập tên khóa học" name="name" />

    </div>
    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <input
        class="form-control"
        placeholder="Nhập mô tả khóa học"
        name="description"
      />

    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input class="form-control" placeholder="Nhập video id" name="videoId" />

    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input class="form-control" placeholder="Nhập trình độ" name="level" />

    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>