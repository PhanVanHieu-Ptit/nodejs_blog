<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên</label>
      <input
        class="form-control"
        placeholder="Nhập tên khóa học"
        value="{{course.name}}"
        id="name"
        name="name"
      />

    </div>
    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <textarea
        class="form-control"
        placeholder="Nhập mô tả khóa học"
        id="description"
        name="description"
      >{{course.description}}</textarea>

    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input
        class="form-control"
        placeholder="Nhập Videoid"
        value="{{course.videoId}}"
        id="videoId"
        name="videoId"
      />

    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        class="form-control"
        placeholder="Nhập trình độ"
        value="{{course.level}}"
        id="level"
        name="level"
      />

    </div>

    <button type="submit" class="btn btn-primary">Sửa khóa học</button>
  </form>
</div>